<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Add New Blog</title>
    <style>
        /* Add custom styles for the textarea */
        #body {
            width: 100%;
            min-height: 200px;
            resize: vertical; /* Allows vertical resizing */
        }
    </style>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container mt-3">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <b><label for="coverImage" class="form-label">Cover Image</label></b>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage"/>
            </div>
            <div class="mb-3">
                <b><label for="title" class="form-label">Title</label></b>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="title"/>
            </div>
            <div class="mb-3">
                <b><label for="body" class="form-label">Body</label></b>
                <textarea name="body" class="form-control" id="body" rows="10"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <%- include("./partials/script") %>
</body>
</html>
